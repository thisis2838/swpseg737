@model Order
@{
    ViewData["Title"] = "Cart";
}

<link href="~/css/StyleSheet.css" rel="stylesheet" />
<style>
    .blurred-row {
        filter: blur(0.8px);
        opacity: 0.6;
    }
</style>

<h1>Cart</h1>
<hr/>

<section id="cart_items">
    @*
    <div class="breadcrumbs">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
