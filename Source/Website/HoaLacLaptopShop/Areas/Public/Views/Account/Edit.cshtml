@using HoaLacLaptopShop.Areas.Public.ViewModels
@model AccountEditViewModel

@{
    ViewData["Title"] = "Profile";
}
<div>
    @{
        if (Context.IsLoggedIn())
        {
            @DateTime.Now
            <h1>Hello @Context.GetCurrentUser()!.Name.ToUpper()</h1>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ID" />
                        <input type="hidden" value="@Model.PassHash" name="oldhash" />
                        <div class="form-group">
                            <label asp-for="Email" class="control-label form-label"></label>
                            <input asp-for="Email" class="form-control" value="@Model.Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label form-label"></label>
                            <input asp-for="Name" class="form-control" value="@Model.Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CurrentPassword" class="control-label form-label"></label>
                            <input asp-for="CurrentPassword" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword" class="control-label form-label"></label> (leave empty if you don't want to change)
                            <input asp-for="NewPassword" class="form-control"/>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label asp-for="Gender" class="control-label form-label"></label>
                            <br />
                            <input class="form-check-input" type="radio" value="Male" name="gender" @(Model.Gender ? "checked" : "") /> Male
                            <input class="form-check-input" type="radio" value="Female" name="gender" @(Model.Gender ? "" : "checked") /> Female
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                        </div>
                        <br />
                        <div class="text-danger">@ViewBag.Error</div>
                        <div class="form-group">
                            <input type="submit" value="Update my information" class="btn btn-primary" />
                        </div>
                    </form>
                </div>     
                <div class="col-md-6">
                    
                </div>
            </div>

            @section Scripts {
            @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }

        }
        else
        {
            <span>No info</span>
        }
    }
</div>

