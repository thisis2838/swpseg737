@model List<Order>
@{
    ViewData["Title"] = "Order History";
}
<h1>Order List</h1>
<div>
    <a class="btn btn-primary" asp-action="Details">Back to Profile</a>
</div>
<hr />
<div class="row">
    <div class="card">
        <div class="card-body">
            <table id="datatables-reponsive" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Created</th>
                        <th>Customer Name</th>
                        <th>Title</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.OrderTime</td>
                            <td>@item.Buyer.Name</td>
                            <td>
                                @foreach (var orderItem in item.OrderDetails)
                                {
                                    <span>@orderItem.Quantity @orderItem.Product.Name</span>
                                    <br />
                                }
                            </td>
                            <td>@string.Format("{0:N0}", item.TotalPrice)</td>
                            <td class="order-status">@item.Status</td>
                            <td><a asp-action="OrderDetails" asp-controller="Account" asp-route-id="@item.ID" class="btn btn-primary">View Details</a></td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Datatables Responsive
        $("#datatables-reponsive").DataTable({
            responsive: true
        });
    });
</script>

<script>
    $(document).ready(function () {
        $('#orderStatus').change(function () {
            var selectedStatus = $(this).val();
            $('#datatables-reponsive tbody tr').each(function () {
                var row = $(this);
                var status = row.find('.order-status').text();
                if (selectedStatus === "All" || status === selectedStatus) {
                    row.show();
                } else {
                    row.hide();
                }
            });
        });
    });
</script>