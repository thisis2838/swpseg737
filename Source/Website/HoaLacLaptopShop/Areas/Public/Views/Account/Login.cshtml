@using HoaLacLaptopShop.Areas.Public.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login to your account</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Login" asp-route-returnurl="@ViewBag.returnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> Keep me signed in
                </label>
            </div>
            <br />
            <div>
                <a class="link-danger" asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
            </div>
            <br />
            @if (ViewBag.Error != null)
            {
                <p class="text-danger">
                    @ViewBag.Error
                </p>
            }
            <div class="form-group">
                <div></div>
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts 
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}