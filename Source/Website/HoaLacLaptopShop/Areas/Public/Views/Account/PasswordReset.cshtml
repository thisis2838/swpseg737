@{
    ViewData["Title"] = "Reset password Code";
}
<h1>Enter</h1>
<h4>your Email</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="PasswordReset">
            <div class="form-group">
                <label class="control-label form-label">Enter your email</label>
                <input name="resetEmail" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
