<script>
    function showMessage(message)
    {
        $.toast
        ({
            text: message, 
            heading: 'Message',
            icon: 'info', 
            showHideTransition: 'fade',
            allowToastClose: true,
            hideAfter: 5000, 
            stack: 5,
            position: 'bottom-left',
            textAlign: 'left',
            loader: true,
            loaderBg: '#fcba03'
        });
    }
    function showError(error)
    {
        $.toast
        ({
            text: error, 
            heading: 'Error',
            icon: 'error', 
            showHideTransition: 'fade',
            allowToastClose: true,
            hideAfter: 5000, 
            stack: 5,
            position: 'bottom-left',
            textAlign: 'left',
            loader: true,
            loaderBg: '#000000',
        });
    }
</script>

@if (TempData.TryGetValue("Error", out var errors))
{
    foreach (var error in (ICollection<string>)errors!)
    {
        <script>showError('@error')</script>
    }
}
@if (TempData.TryGetValue("Message", out var messages))
{
    foreach (var message in (ICollection<string>)messages!)
    {
        <script>showError('@message')</script>
    }
}