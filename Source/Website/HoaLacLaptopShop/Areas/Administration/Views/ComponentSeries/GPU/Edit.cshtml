@model HoaLacLaptopShop.Models.LaptopGPUSeries
@{
    ViewData["Title"] = "Update";
}

<h1>Editing</h1>
<h2>GPU Series #@(Model.ID)</h2>

<div>
    <div value="Save" onclick="$('#main-form').submit();" class="btn btn-primary">Save</div>
    <div class="btn btn-danger" onclick="confirmDelete()">Delete</div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
<hr />

<form asp-action="Edit" id="main-form">
    <partial name="_GPUInfoView.cshtml" model="@Model" />
</form>

<form asp-action="Delete" id="form-delete">
    <input type="hidden" asp-for="ID" />
</form>

@section Scripts
{
    <script>
        function confirmDelete()
        {
            if (confirm('Are you sure you want to delete this GPU Series?'))
            {
                $('#form-delete').submit();
            }
        }
    </script>
}