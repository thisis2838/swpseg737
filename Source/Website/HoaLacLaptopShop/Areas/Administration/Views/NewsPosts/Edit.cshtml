@using HoaLacLaptopShop.Areas.Shared.ViewModels
@model NewsPostDetailsViewModel

@{
    ViewData["Title"] = $"Editing News Post #{Model.ID}";
}

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">

<partial 
    name="~/Areas/Administration/Views/Shared/_PageHeading.cshtml" 
    model="@(new{ Heading = "News Posts", Subheading = $"#{Model.ID}"})" 
/>
<div>
    <a class="btn btn-primary" onclick="$('#form-edit').submit();">Save</a>
    <a class="btn btn-primary" onclick="confirmDelete()">Delete</a>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
<hr />

<form id="form-edit" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Title" class="control-label form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div>
                <label asp-for="Content" class="control-label form-label"></label>
                <textarea id="summernote" asp-for="Content">@Html.Raw(Model.Content)</textarea>
            </div>
        </div>
    </div>
</form>
<form id="form-delete" asp-action="Delete">
    <input type="hidden" asp-for="ID" />
</form>

@section Scripts
{
    <script>
        function confirmDelete()
        {
            if (confirm('Are you sure you want to delete this post?'))
            {
                $('#form-delete').submit();
            }
        }
    </script>
    <partial name="~/Areas/Administration/Views/NewsPosts/_EditorScripts.cshtml"/>
}