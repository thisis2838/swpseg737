@model HoaLacLaptopShop.Models.Brand
@{
    ViewData["Title"] = "Update";
}

<partial 
    name="~/Areas/Administration/Views/Shared/_PageHeading.cshtml" 
    model="@(new{ Heading = "Brands", Subheading = $"#{Model.ID}"})" 
/>
<div>
    <div value="Save" onclick="$('#main-form').submit();" class="btn btn-primary">Save</div>
    <div class="btn btn-danger" onclick="confirmDelete()">Delete</div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
<hr />

<div class="col-md-6">
    <form asp-action="Edit" id="main-form">
        <partial name="_BrandInfoView.cshtml" model="@Model" />
    </form>
</div>

<form asp-action="Delete" id="form-delete">
    <input type="hidden" asp-for="ID" />
</form>

@section Scripts
{
    <script>
        function confirmDelete()
        {
            if (confirm('Are you sure you want to delete this brand?'))
            {
                $('#form-delete').submit();
            }
        }
    </script>
}