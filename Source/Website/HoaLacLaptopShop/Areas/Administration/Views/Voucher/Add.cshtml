@model HoaLacLaptopShop.Models.Voucher
@{
    ViewData["Title"] = "Create";
}


<partial 
    name="~/Areas/Administration/Views/Shared/_PageHeading.cshtml"
    model="@(new{ Heading = "Vouchers", Subheading = $"Add New"})" 
/>
<a class="btn btn-primary" onclick="$('#main-form').submit()"><i class="fa-solid fa-plus"></i> Add</a>
<a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-arrow-left"></i> Back to List</a>
<hr/>

<div class="col-md-4">
    <form asp-action="Add" id="main-form">
        <partial name="_VoucherDetailsView.cshtml" model="@Model"></partial>
    </form>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}