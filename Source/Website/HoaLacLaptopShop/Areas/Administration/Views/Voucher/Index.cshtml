@model IEnumerable<HoaLacLaptopShop.Models.Voucher>
@{
    ViewData["Title"] = "Index";
}

<partial 
    name="~/Areas/Administration/Views/Shared/_PageHeading.cshtml"
    model="@(new{ Heading = "Vouchers", Subheading = $"List"})" 
/>
<a asp-action="Add" class="btn btn-primary">Add</a>
<hr/>

<form asp-action="Search" method="get">
    <div class="form-group">
        <input type="text" name="query" class="form-control" placeholder="Search by Code or Issuer ID" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="filter">Filter</label>
        <select id="filter" name="filter" class="form-control" onchange="this.form.submit()">
            <option value="">All</option>
            <!option value="Expired" @(ViewData["CurrentFilter"]?.ToString() == "Expired" ? "selected" : "")>Expired</!option>
            <!option value="Available" @(ViewData["CurrentFilter"]?.ToString() == "Available" ? "selected" : "")>Available</!option>
        </select>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model =>model.First().Code)</th>
            <th>@Html.DisplayNameFor(model => model.First().MinimumOrderPrice)</th>
            <th><@Html.DisplayNameFor(model =>model.First().DiscountValue)</th>
            <th>@Html.DisplayNameFor(model => model.First().IsPercentageDiscount)</th>
            <th><@Html.DisplayNameFor(model => model.First().ExpiryDate)</th>              
            <th>@Html.DisplayNameFor(model => model.First().IssuerId)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var voucher in Model)
        {
            <tr>
                <td>@voucher.Code</td>
                <td>@voucher.MinimumOrderPrice.ToString("N0")</td>
                <td>@voucher.DiscountValue</td>
                <td>@voucher.IsPercentageDiscount</td>
                <td>@voucher.ExpiryDate.ToShortDateString()</td>
                <td>@voucher.IssuerId</td>               
                <td>
                    <a asp-action="Edit" asp-route-id="@voucher.ID" class="btn-primary btn">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

